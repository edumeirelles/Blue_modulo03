@model Paciente
<h2>Criar novo paciente</h2>

<div class="row" >
    <form class="col-md-4" asp-action="Create">
        <div class="form-group">
            <label class="control-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="DataNasc"></label>
            <input class="form-control" asp-for="DataNasc" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Descricao"></label>
            <input class="form-control" asp-for="Descricao" />
        </div>

        <input type="submit" value="Criar!" class="btn btn-primary"/>
        <a class="btn btn-primary" asp-controller="Paciente" asp-action="Index">Voltar</a>
    </form>
</div>